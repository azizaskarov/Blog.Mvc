@using Blog.Models
@model List<BlogEntry>

@{
    ViewData["Title"] = "Posts";
}

<h2>Posts</h2>
<hr/>

<div>
    @foreach (var post in @Model)
    {
        <div class="card mb-2">
            <div class="card-body">
                @Html.Raw(post.Content)
            </div>
            
            <div class="card-footer">
                @Html.ActionLink("Editor","CreatorPage", new {Id = post.Id}, new {@class="btn btn-sm btn-secondary"})
            </div>
        </div>
    }
</div>